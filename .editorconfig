# Editor config
# http://EditorConfig.org

# top-most EditorConfig file
root = true

# No trailing spaces, newline at EOF
[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

# Indent
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
